# Example environment variables for Clubbasse.pl

# Application
NODE_ENV=development
APP_NAME=clubbasse-pl
APP_URL=https://clubbasse.pl
PORT=3000
API_PORT=4000

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=clubbasse-rg
AZURE_LOCATION=westeurope

# Database
DATABASE_URL=sqlserver://your-server.database.windows.net:1433;database=clubbasse;user=dbadmin;password=your-password;encrypt=true
REDIS_URL=redis://your-redis.redis.cache.windows.net:6380
DATABASE_PATH=arch1tect.db

# SMTP Configuration for ARCH1TECT Email Notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=booking@arch1tect.pl

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=HAOS2025!

# API Configuration
API_URL=https://azure-club.vercel.app/api

# Storage
AZURE_STORAGE_ACCOUNT_NAME=clubbassestorage
AZURE_STORAGE_CONTAINER_NAME=images
AZURE_CDN_ENDPOINT=https://clubbasse-cdn.azureedge.net

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=your-endpoint

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=7d
NEXTAUTH_URL=https://clubbasse.pl
NEXTAUTH_SECRET=your-nextauth-secret

# Key Vault
AZURE_KEY_VAULT_NAME=clubbasse-kv

# Email Service (SendGrid/Azure Communication Services)
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@clubbasse.pl

# Payment Gateway (Stripe/PayPal)
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# CI/CD
GITHUB_TOKEN=your-github-token
AZURE_CREDENTIALS=your-azure-credentials-json
