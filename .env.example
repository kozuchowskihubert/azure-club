# Example environment variables for Clubbasse.pl

# Application
NODE_ENV=development
APP_NAME=clubbasse-pl
APP_URL=https://clubbasse.pl
PORT=3000
API_PORT=4000

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=clubbasse-rg
AZURE_LOCATION=westeurope

# Database Configuration
# For local development, leave empty (will use SQLite)
# For production with PostgreSQL:
# Vercel Postgres: postgres://user:password@host:port/database
# Supabase: postgresql://postgres:[password]@[host]:[port]/postgres
DATABASE_URL=
POSTGRES_URL=
DATABASE_PATH=arch1tect.db

# SMTP Configuration for ARCH1TECT Email Notifications
# Option 1: Resend (RECOMMENDED - 3000 emails/month free, 100/day limit)
# MAIL_SERVER=smtp.resend.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=resend
# MAIL_PASSWORD=re_your_api_key_here

# Option 2: Gmail (requires App Password)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-gmail-app-password

# Option 3: SendGrid (100 emails/day free)
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# Option 4: Mailgun (1000 emails/month free)
# MAIL_SERVER=smtp.eu.mailgun.org
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=postmaster@arch1tect.pl
# MAIL_PASSWORD=your-mailgun-password

# Option 5: Custom domain email (from your hosting provider)
# MAIL_SERVER=mail.arch1tect.pl
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=admin@arch1tect.pl
# MAIL_PASSWORD=your-email-password

# Current configuration - Resend (set your API key)
MAIL_SERVER=smtp.resend.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=resend
MAIL_PASSWORD=re_your_resend_api_key_here

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=HAOS2025!

# API Configuration
API_URL=https://azure-club.vercel.app/api

# Storage
AZURE_STORAGE_ACCOUNT_NAME=clubbassestorage
AZURE_STORAGE_CONTAINER_NAME=images
AZURE_CDN_ENDPOINT=https://clubbasse-cdn.azureedge.net

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=your-endpoint

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=7d
NEXTAUTH_URL=https://clubbasse.pl
NEXTAUTH_SECRET=your-nextauth-secret

# Key Vault
AZURE_KEY_VAULT_NAME=clubbasse-kv

# Email Service (SendGrid/Azure Communication Services)
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@clubbasse.pl

# Payment Gateway (Stripe/PayPal)
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# CI/CD
GITHUB_TOKEN=your-github-token
AZURE_CREDENTIALS=your-azure-credentials-json
