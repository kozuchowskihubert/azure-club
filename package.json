{
  "name": "clubbasse-pl",
  "version": "1.0.0",
  "description": "Clubbasse.pl - Modern e-commerce platform for electronic components",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test:ci --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan -var-file=environments/dev.tfvars",
    "terraform:apply": "cd terraform && terraform apply -var-file=environments/dev.tfvars",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh prod"
  },
  "workspaces": [
    "src/frontend",
    "src/backend"
  ],
  "keywords": [
    "ecommerce",
    "azure",
    "typescript",
    "nextjs",
    "react",
    "components",
    "portfolio"
  ],
  "author": "Clubbasse Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
